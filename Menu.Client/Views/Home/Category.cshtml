@model Menu.Client.Models.CategoryViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Категория: @Model.Name</h2>
<h5>Количество позиций в категории: @Model.MenuItems.Count()</h5>

<div>
    <h4>Позиции меню, принадлижащие к данной категории:</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <table class="table">
            <tr>
                <th>
                    Наименование
                </th>
                <th>
                    Количество
                </th>
                <th>
                    Стоимость
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.MenuItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price) руб.
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </dl>
</div>
<p>
    @Html.ActionLink("Вернуться на главную", "Index")
</p>
