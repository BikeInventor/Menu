@model IEnumerable<Menu.Client.Models.ItemViewModel>

@{
    ViewBag.Title = "Список со всякой едой";
}

<h2>Список доступной еды:</h2>

<p>
    @Html.ActionLink("Добавить позицию", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Наименование
        </th>
        <th>
            Количество
        </th>
        <th>
            Стоимость
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) руб.
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) | 
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
